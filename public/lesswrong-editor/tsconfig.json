{
  "compilerOptions": {
    "lib": ["ES2019", "ES2020.String", "DOM", "DOM.Iterable"],

    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictBindCallApply": false,

    "esModuleInterop": true,
    "target": "es2019",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
